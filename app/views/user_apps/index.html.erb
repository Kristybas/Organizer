<%= render 'pages/coordonnées' %>
<div>
<h1>Toutes vos démarches</h1>
<div class="d-flex w-100 justify-content-between align-items-center">

  <div class="boutton d-flex justify-content-center" id="buttons">

    <div class="boutton d-flex justify-content-center" id="je-demenage">
      <%= link_to je_demenage_path, class: 'btn btn-flex', style: 'background-color: #FFD18E; color: white;' do %>
        <i class="fa-solid fa-dolly" style="font-size: 30px;"></i>
        Je déménage
      <% end %>
    </div>

    <div class="boutton d-flex justify-content-center" id="je-change-de-rib">
      <%= link_to rib_path, class: 'btn btn-flex', style: 'background-color: #FFD18E; color: white;' do %>
        <i class="fa-solid fa-comments-dollar" style="font-size: 30px;"></i>
        Je change de RIB
      <% end %>
    </div>

    <div class="boutton d-flex justify-content-center" id="je-change-mes-coordonnees">
      <%= link_to users_edit_path, class: 'btn btn-flex', style: 'background-color: #FFD18E; color: white;' do %>
        <i class="fa-solid fa-address-card" style="font-size: 30px;"></i>
        Je change mes coordonnées
      <% end %>
    </div>

    <div class="boutton d-flex justify-content-center" id="ajouter-une-demarche">
      <a href="/new_demarche" class="btn btn-flex" style="background-color: #FFD18E; color: white;">
        <i class="fa-solid fa-address-card" style="font-size: 30px;"></i>
        Ajouter une démarche
      </a>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= link_to 'Retour', root_path, class: 'btn btn-primary' %>
</div>
</div>
