
<%= render 'pages/coordonnées' %>
<h1>Éditer mon profil</h1>

<%= simple_form_for @user, url: user_path(@user), method: :patch do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "erreur") %> interdite(s) de sauvegarder :</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="formulaire">

  <div class="form-group">
    <%= f.input :first_name, label: 'Prénom' %>
  </div>

  <div class="form-group">
    <%= f.input :last_name, label: 'Nom' %>
  </div>

  <div class="form-group">
    <%= f.input :email, label: 'Email' %>
  </div>

  <div class="form-group">
    <%= f.input :phone, label: 'Téléphone' %>
  </div>

  <div class="form-group">
    <%= f.input :address, label: 'Adresse' %>
  </div>

  <div class="form-group">
    <%= f.input :photo, label: 'Photo' %>
  </div>

  <div class="form-group">
    <%= f.input :rib, label: 'RIB' %>
  </div>

  <div class="form-group">
    <%= f.button :submit, 'Mettre à jour', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
